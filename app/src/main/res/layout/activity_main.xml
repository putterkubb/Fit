<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ptrawt.fitwithputter.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bgFitnessGirlDark"
        android:scaleType="centerCrop"
        android:src="@drawable/fitness_girl_dark"
        android:contentDescription="@string/backgroundoffrontpage"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_trainer_apos_s_friend"
        android:singleLine="false"
        android:textColor="@color/colorPrimaryDark"
        android:phoneNumber="false"
        android:textAlignment="center"
        android:password="false"
        android:textSize="40sp"
        android:padding="16dp"
        android:textStyle="normal"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:shadowColor="@color/button_material_dark"
        android:background="@color/colorAccent"
        android:backgroundTintMode="screen" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:longClickable="false"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/background_floating_material_light"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Send" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Connect" />

</RelativeLayout>
